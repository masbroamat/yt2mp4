{
  "crons": [
    {
      "path": "/api/cleanup",
      "schedule": "0 0 * * *"
    }
  ],
  "functions": {
    "app/api/**/*": {
      "memory": 1024,
      "maxDuration": 60,
      "includeFiles": "bin/**"
    }, 
    "api/**/*.js": {
      "memory": 1024,
      "maxDuration": 60
    }
  },
  "version": 2, 
  "routes": [
    { "src": "/api/download/video/(.+)", "dest": "/api/download/video/[filename]/route" }
  ],
  "outputs": {
    "public": {
      "bin/youtube-dl": {
        "type": "static"
      }
    }
  }
}
